             </Label>
             <TextField styleClass="my-textFile" stylesheets="@firstStylecss.css" fx:id="cineadre" maxWidth="240.0" prefHeight="39.0" prefWidth="230.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                 <font>
                     <Font size="18.0" />
                 </font>
             </TextField>
         </children>
      </GridPane>
      <Button styleClass="my-button" stylesheets="@firstStylecss.css" layoutX="250.0" layoutY="170.0" mnemonicParsing="false" onAction="#addButon" prefHeight="30.0" prefWidth="110.0" text="Add" />
      <Button styleClass="my-button" stylesheets="@firstStylecss.css" layoutX="376.0" layoutY="170.0" mnemonicParsing="false" onAction="#cancelButon" prefHeight="30.0" prefWidth="110.0" text="Cancel" />
   </children>
